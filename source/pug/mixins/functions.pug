mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-end

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-white Ejercer derechos fundamentales del trabajo en el marco de la constitución política y los convenios internacionales.
                    h1#curso-titulo-tema.curso-titulo.text-white Derechos fundamentales en el trabajo

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Dignidad
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Principios
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Ordenamiento jurídico
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 bloque constitucional

                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion Tanto la morbilidad como la mortalidad de la desnutrición aguda en los niños y niñas menores de 5 años, son eventos de interés en salud pública para el país y los casos que se presenten deben ser reportados al sistema nacional de vigilancia en salud pública - Sivigila, de acuerdo a los parámetros dados por el Instituto Nacional de Salud - INS.

                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light.bg-brand-color-1.badge-brand-light(href="main.html").mb-4
                            span.font-weight-bold Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block.mb-4
                    img(src= srcImagen).curso-imagen.w-100.p-5.mb-5


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
